{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false, 
    "typeRoots": ["./node_modules/@types", "./@types"], 
    "baseUrl": "./",
    "paths": {
      "*": ["@types/*"] 
    }
  },
  "include": ["src/**/*", "@types/**/*"],
  "exclude": ["node_modules"]
}